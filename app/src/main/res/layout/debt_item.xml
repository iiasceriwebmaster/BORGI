<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="debt"
            type="md.webmaster.borgi.data.DebtEntity" />

    </data>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_marginVertical="12dp"
            android:gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="4000 0000 0000 0001"
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:text="26 oct, 2023"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/eight_zero"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:text="Nr.458912"
                android:id="@+id/nr"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAlignment="textEnd"
                android:minWidth="60dp"
                android:layout_weight="1"
                android:id="@+id/debtAmount"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="+20 000"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/underline_on_white"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>


</layout>