<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GoldBtn">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/login_fields_height</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="GoldBtnSquare" parent="GoldBtn">
        <item name="android:background">@drawable/gold_btn_background</item>
    </style>

    <style name="GoldBtnRound" parent="GoldBtn">
        <item name="android:background">@drawable/gold_btn_background_round</item>
    </style>

    <style name="RedBtn">

        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/login_fields_height</item>
        <item name="android:background">@drawable/red_btn</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarBackBtn">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>